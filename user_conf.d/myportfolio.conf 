server {
  listen 80;
  server_name http://sambina-aninta.duckdns.org;

  if ($host = sambina-aninta.duckdns.org) {
    return 301 https://$host$request_url;

}
}

server {
  listen 443 ssl;
  server_name http://sambina-aninta.duckdns.org;

  location / {
    proxy_pass http://sambina-aninta.duckdns.org:5000/
    }

  # Load the certificate files

  ssl_certificate /etc/letsencrypt/live/myportfolio/fullchain.pem;
  ssl_certification_key /etc/letsencrypt/live/myportfolio/privkey.pem;
  ssl_certification_certificate /etc/letsencrypt/live/myportfolio/chain.pem;

  }
